JIRA_URL=https://yourcompany.atlassian.net
JIRA_EMAIL=you@yourcompany.com
JIRA_API_TOKEN=your-api-token-here
JIRA_PROJECT_KEYS=PROJ,TEAM

# Optional: Limit Confluence to specific spaces (uses same Atlassian credentials as Jira)
CONFLUENCE_SPACE_KEYS=DOCS,ENG

# Optional: Enable AI chat feature
ANTHROPIC_API_KEY=sk-ant-...

# Optional: Enable Slack integration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_CHANNEL_IDS=C01234,C05678

# Optional: Enable Google Docs integration
# Use either key path (for local dev) or inline JSON (for containers)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./google-service-account.json
# GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
GOOGLE_FOLDER_IDS=folder_id_1,folder_id_2
GOOGLE_MEETING_NOTES_PATTERN=Meeting Notes.*|Transcript.*
